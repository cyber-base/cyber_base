{% extends 'base.html.twig' %}

{% block title %}Cyber Base - Liste des Animateurs
{% endblock %}

{% block body %}
	<h3 class="text-center fw-bold text-dark text-decoration-underline">LISTE DES ANIMATEURS</h3>

	<div class="d-grid gap-2 d-md-flex justify-content-md-end mb-3">
		{% if is_granted('ROLE_SUPER_ANIMATEUR') %}
		<a class="btn btn-primary" href="{{ path('app_animateur_new') }}">+ Animateur</a>
			{% endif %}
	</div>

	{% for message in app.flashes('success') %}
	<div class="alert alert-success mt-4">
	{{ message }}
	</div>
	{% endfor %}
	<table class="table table-striped table-hover text-start text-center mb-3">
		<thead>
			<tr>
				<th>#</th>
				<th>Nom</th>
				<th>Prénom</th>
				<th>Téléphone</th>
				<th>E-mail</th>
				<th>Roles</th>
				{# <th>Password</th> #}
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for animateur in animateurs %}
				<tr>
					<td>{{ animateur.id }}</td>
					<td>{{ animateur.nom }}</td>
					<td>{{ animateur.prenom }}</td>
					<td>{{ animateur.tel }}</td>
					<td>{{ animateur.email }}</td>
					<td>{{ animateur.roles ? animateur.roles|json_encode : '' }}</td>

				{% if is_granted('ROLE_SUPER_ANIMATEUR') %}
					<td>
						<a class="btn btn-outline-secondary" href="{{ path('app_animateur_show', {'id': animateur.id}) }}">
							<i class="fa-regular fa-eye"></i>
						</a>

						<a class="btn btn-outline-secondary" href="{{ path('app_animateur_edit', {'id': animateur.id}) }}">
							<i class="fa-regular fa-pen-to-square"></i>
						</a>

						<a class="btn btn-outline-secondary" href="{{ path('app_animateur_delete', {'id': animateur.id}) }}">
							<i class="fa-regular fa-trash-can"></i>
						</a>
					</td>
					{% else %}
					<td class="text-danger"> Access Denied</td>
					{% endif %}
				</tr>
			{% else %}

				<div class="alert alert-danger" role="alert">
					no records found!
				</div>

			{% endfor %}
		</tbody>
	</table>

{% endblock %}
