{% extends 'base.html.twig' %}

{% block title %}Poste
{% endblock %}

{% block body %}
	<h1 class="text-center  p-2 w-50 mx-auto">Poste</h1>

	<table class="table shadow bg-opacity-10 mx-auto w-75">
		<tbody>
			<tr class="table-secondary">
				<th>Id</th>
				<td>{{ poste.id }}</td>
			</tr>
			<tr class="table-light">
				<th>Libelle</th>
				<td>{{ poste.libelle }}</td>
			</tr>
			<tr class="table-secondary">
				<th>TypePoste</th>
				<td>{{ poste.typePoste }}</td>
			</tr>
		</tbody>
	</table>
	<div class="d-grid gap-2 d-md-flex justify-content-md-center">
		<a class="btn btn-secondary" href="{{ path('app_poste_index') }}">Retour</a>

		<a class="btn btn-success" href="{{ path('app_poste_edit', {'id': poste.id}) }}">Modifier</a>

		{{ include('poste/_delete_form.html.twig') }}
	</div>
{% endblock %}
